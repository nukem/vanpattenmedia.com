  gem "vpmframe", :git => "git://github.com/vanpattenmedia/vpmframe-gem.git", :branch => "make"

  # Sass 3.2+, Compass and plugins
  gem "sass", ">=3.2.0"
  gem "sass-globbing"
  gem "susy"
  gem "compass"
  gem "compass-rgbapng"
  gem "oily_png"

  # Image optimization
  gem "image_optim"

  # JavaScript
  gem "jammit"
  gem "uglifier"

  # Guard
  gem "guard"
  gem "guard-livereload"
  gem "guard-shell"
end
