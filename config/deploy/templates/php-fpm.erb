[<%= "#{application}" %>]

; application credentials
user = <%= "#{app_user}" %>
group = <%= "#{app_group}" %>

; listen on sock
listen = /var/run/php5-fpm-pools-<%= "#{application}" %>.sock

chdir = /home/<%= "#{app_user}" %>/<%= "#{application}" %>

; process manager
pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 2

pm.max_requests = 500

; logging
access.log = /home/<%= "#{app_user}" %>/php/log/<%= "#{application}" %>.access.log
access.format = %R - %u %t "%m %r%Q%q" %s %f %{mili}d %{kilo}M %C%%
slowlog = /home/<%= "#{app_user}" %>/php/log/<%= "#{application}" %>.slow.log

request_slowlog_timeout = 5s

rlimit_files = 32768 ; required

; security
security.limit_extensions = .php

; php.ini overrides
php_admin_value[sendmail_path] = /usr/sbin/sendmail -t -i -f info@vanpattenmedia.com
php_flag[display_errors] = off
php_admin_flag[log_errors] = on
php_admin_value[error_log] = /home/<%= "#{app_user}" %>/php/log/error.log
php_admin_value[memory_limit] = 128M
php_admin_value[session.save_path] = /home/<%= "#{app_user}" %>/php/sessions
php_admin_value[session.name] = sess_<%= "#{application}" %>
php_admin_value[session.hash_function] = sha512
php_admin_value[session.hash_bits_per_character] = 5